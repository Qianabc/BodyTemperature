<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1976D2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/returnbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:visibility="visible"
                    app:srcCompat="?attr/actionModeCloseDrawable"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="基本信息       "
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="年龄"
                        android:textColor="#050505"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="性别"
                        android:textColorLink="#090808"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/boy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/girl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="测试模式"
                        android:textColorLink="#090808"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/testmode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:text="测试模式"
                        android:textOn="开"
                        android:textOff="关"
                        tools:checked="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="民族"
                        android:textColorLink="#0C0C0C"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="体重(kg)"
                        android:textColorLink="#0C0C0C"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/wight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="入睡时间"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/sleeptime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="标定心率时间*"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/standard_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="标定心率*"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/standard_heart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="MIN_SIGNAL_SIZE"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/min_signal_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="MAX_SIGNAL_SIZE"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/max_signal_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="SAMPLING_FREQUENCY"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/sampling_f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:text="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="RESCAN_FREQUENCY"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/rescan_f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:text="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="头像位移"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/offset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="最低亮度"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/min_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="70" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="最高亮度"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/max_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="150" />
                </LinearLayout>

                <Button
                    android:id="@+id/makesure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1976D2"
                    android:text="保存基本信息" />

                <TextView
                    android:id="@+id/show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>